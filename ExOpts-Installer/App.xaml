<Application x:Class="ExOpts_Installer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ExOpts_Installer"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="ColorStyles" Source="Styles/Colors.xaml"/>
                <ResourceDictionary x:Name="FontStyles" Source="Styles/Font.xaml"/>
                <ResourceDictionary x:Name="ButtonStyle" Source="Styles/ButtonBase.xaml"/>
                <ResourceDictionary x:Name="CheckBoxStyle" Source="Styles/CheckBoxBase.xaml"/>
                <ResourceDictionary x:Name="TextBoxStyle" Source="Styles/TextBoxBase.xaml"/>
                <ResourceDictionary x:Name="RadioButtonStyle" Source="Styles/RadioButtonBase.xaml"/>
                <ResourceDictionary x:Name="ScrollBarStyle" Source="Styles/ScrollBarBase.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
