<UserControl x:Class="NFSU2_ExOpts.Controls.ErrorMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NFSU2_ExOpts.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="70" 
             d:DesignWidth="710">
    <Border CornerRadius="10"
            BorderThickness="2"
            BorderBrush="{StaticResource RedBrush}"
            Background="{DynamicResource ErrorBackgroundBrush}">
        <Grid Loaded="Grid_Loaded">
            <Image HorizontalAlignment="Left"
                   Margin="5"
                   Source="/NFSU2 ExOpts;component/Images/error.png"/>
            <TextBlock x:Name="ErrorTextBlock"
                       TextAlignment="Left"
                       Margin="70,0,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="{StaticResource Regular}"
                       FontFamily="{StaticResource BaseFont}"
                       Foreground="{StaticResource RedBrush}"/>
        </Grid>
    </Border>
</UserControl>
